<%= simple_form_for @item do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-xs-10">
      <%= f.input :name, placeholder: "Enter new item name...",
                  label_html: { class: 'sr-only' }, autofocus: true %>
      <%= f.input :description, placeholder: "Enter optional description...",
                  label_html: { class: 'sr-only' },
                  input_html: { class: 'invisi-field' }  %>
    </div>
    <div class="col-xs-2">
      <%= f.button :submit, "+", title: "Add item", class: "btn-block" %>
    </div>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Item</th>
      <th>Delete</th>
      <th>Add to list</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr id="<%= dom_id(item) %>">
        <td>
          <strong><%= link_to item.name, item %></strong><br>
          <%= item.description %>
        </td>
        <td class="small-col">
          <%= link_to item, title: "Delete", method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn btn-default" do %>
            <i class="fa fa-times"></i>
          <% end %>
        </td>
        <td class="small-col">
          <%= link_to new_item_list_assignment_path(item), title: "Add to list",
              class: "btn btn-default" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
