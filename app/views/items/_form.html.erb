<%= simple_form_for @item do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :photo %>

  <% if params[:lists] %>
    <%= f.association :lists, collection: @lists, as: :check_boxes, checked: params[:lists] %>
  <% else %>
    <%= f.association :lists, collection: @lists, as: :check_boxes %>
  <% end %>

  <% if params[:return_to] %>
    <%= f.hidden_field :return_to, value: params[:return_to] %>
  <% end %>

  <%= f.button :submit, class: "btn-primary xs-block" %>

  <% if @item.new_record? %>
    <%= f.input :quick_entry_mode, as: :boolean,
      input_html: { checked: false }, wrapper_html: { class: "text-muted" } %>
  <% end %>

<% end %>
