<%= simple_form_for @item do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :photo %>
  <% if params[:list_id] %>
    <%= f.hidden_field :return_to, value: list_path(params[:list_id]) %>
    <%= f.simple_fields_for(:list_assignments) do |la| %>
      <%= la.hidden_field :list_id, value: params[:list_id] %>
    <% end %>
    <%= f.button :submit, title: "Create item and add to list" %>
  <% else %>
    <%= f.button :submit %>
  <% end %>
<% end %>
